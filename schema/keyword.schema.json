{
  "#$schema": "https://json-schema.org/draft/2020-12/schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "token", "languages", "description"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^keyword\\.[a-z0-9_.]+$"
    },
    "token": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["keyword"]
    },
    "categories": {
      "type": "array",
      "items": { "type": "string" }
    },
    "description": {
      "type": "object",
      "properties": {
        "en": { "type": "string" },
        "cs": { "type": "string" }
      }
    },
    "languages": {
      "type": "object",
      "additionalProperties": {
        "type": "boolean"
      }
    },
    "relatedConcepts": {
      "type": "array",
      "items": { "type": "string" }
    },
    "relatedFeatures": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}

